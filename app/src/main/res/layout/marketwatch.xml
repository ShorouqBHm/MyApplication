<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:layout_marginTop="200dp"
    android:orientation="horizontal"
  >




    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="275dp"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/Black"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/company"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginStart="5dp"
                android:text="@string/company"
                android:textColor="?attr/White"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/askprice"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginStart="43dp"
                android:text="@string/askprice"
                android:textAlignment="center"
                android:textColor="?attr/White"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lastprice"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:text="@string/lastprice"
                android:textAlignment="center"
                android:textColor="?attr/White"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bidprice"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:text="@string/bidprice"
                android:textAlignment="center"
                android:textColor="?attr/White"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/highprice"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:text="@string/highprice"
                android:textAlignment="center"
                android:textColor="?attr/White"
                android:textSize="14sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    </androidx.cardview.widget.CardView>


</RelativeLayout>




